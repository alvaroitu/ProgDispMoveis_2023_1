<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="15dp">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/nome" android:minHeight="48dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nacionalidade"
            android:ems="10"
            android:id="@+id/nacionalidade" android:minHeight="48dp"
            />
    <Button
            android:text="Salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/salvar"/>
    <TextView
            android:text="Olá, Usuário não definido"
            android:layout_width="match_parent"
            android:layout_height="84dp" android:id="@+id/dadosRecuperados" android:gravity="center"/>
    <Button
            android:text="Deletar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/deletar"/>
</LinearLayout>